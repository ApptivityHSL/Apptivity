<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputAlter2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInformation">

    <!--  android:text="@string/inputName" /> -->

    <Button
        android:id="@+id/btPInfo"
        android:layout_width="104dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="25dp"
        android:text="@string/btPInfo"/>

    <EditText
        android:id="@+id/inputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="544dp"
        android:ems="10"
        android:hint="@string/inputName"
        android:inputType="textPersonName" />

    <!-- android:text="@string/inputAlter" /> -->

    <RadioGroup
        android:layout_width="213dp"
        android:layout_height="129dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="230dp">

        <RadioButton
            android:id="@+id/inputFemale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/cbFemale" />

        <RadioButton
            android:id="@+id/inputMale"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="@string/cbMale" />
    </RadioGroup>

    <EditText
        android:id="@+id/inputAlter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="489dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="@string/inputAlter"/>

</RelativeLayout>